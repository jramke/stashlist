{
  "name": "stashlist-web-extension",
  "version": "1.0.0",
  "displayName": "Stashlist",
  "author": "Joost Ramke",
  "description": "The offical stashlist web extension to quickly save your stashes",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch --mode development --minify false",
    "serve:firefox": "web-ext run --start-url \"about:debugging#/runtime/this-firefox\"  --source-dir ./dist/",
    "serve:chrome": "web-ext run -t chromium --start-url \"https://example.com\" --source-dir ./dist/",
    "check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "license": "MIT",
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@samrum/vite-plugin-web-extension": "^5.1.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@tsconfig/svelte": "^5.0.2",
    "@types/chrome": "^0.0.254",
    "@types/eslint": "8.56.0",
    "@types/webextension-polyfill": "^0.10.6",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.56.0",
    "postcss": "^8.4.32",
    "postcss-load-config": "^5.0.2",
    "svelte": "^4.2.5",
    "svelte-check": "^3.6.0",
    "svelte-preprocess": "^5.1.0",
    "tailwindcss": "^3.3.6",
    "tslib": "^2.6.2",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-alias": "^0.1.1",
    "vite-tsconfig-paths": "^4.3.1",
    "web-ext": "^7.8.0"
  },
  "dependencies": {
    "@repo/ui": "workspace:*",
    "webextension-polyfill": "^0.10.0",
    "zod": "^3.22.4"
  }
}
