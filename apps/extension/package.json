{
  "name": "extension",
  "version": "1.0.6",
  "displayName": "Stashlist",
  "author": "Joost Ramke",
  "description": "The offical stashlist web extension to quickly save your stashes",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch --mode development --minify false",
    "serve:firefox": "web-ext run --start-url \"about:debugging#/runtime/this-firefox\"  --source-dir ./dist/",
    "serve:chrome": "web-ext run -t chromium --start-url \"https://example.com\" --source-dir ./dist/",
    "check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "license": "MIT",
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@samrum/vite-plugin-web-extension": "^5.1.0",
    "@sveltejs/vite-plugin-svelte": "^3.1.0",
    "@tsconfig/svelte": "^5.0.4",
    "@types/chrome": "^0.0.266",
    "@types/eslint": "8.56.9",
    "@types/webextension-polyfill": "^0.10.7",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^8.0.0",
    "postcss": "^8.4.38",
    "postcss-load-config": "^5.0.3",
    "svelte": "^4.2.14",
    "svelte-check": "^3.6.9",
    "svelte-preprocess": "^5.1.3",
    "tailwindcss": "^3.4.3",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.8",
    "vite-plugin-alias": "^0.1.1",
    "vite-tsconfig-paths": "^4.3.2",
    "web-ext": "^7.11.0"
  },
  "dependencies": {
    "@repo/ui": "workspace:*",
    "webextension-polyfill": "^0.10.0",
    "zod": "^3.22.4"
  }
}
