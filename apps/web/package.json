{
	"name": "web",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"turso": "turso dev --db-file turso/dev.db",
		"studio": "drizzle-kit studio --config drizzle.config.ts",
		"generate": "drizzle-kit generate --config drizzle.config.ts",
		"migrate": "tsx src/lib/server/db/migrate.ts",
		"push": "drizzle-kit push --config=drizzle.config.ts",
		"introspect": "drizzle-kit introspect --config=drizzle.config.ts"
	},
	"devDependencies": {
		"@repo/eslint-config": "workspace:*",
		"@sveltejs/adapter-auto": "^3.2.0",
		"@sveltejs/kit": "^2.5.5",
		"@sveltejs/vite-plugin-svelte": "^3.1.0",
		"@types/eslint": "8.56.9",
		"@typescript-eslint/eslint-plugin": "^7.6.0",
		"@typescript-eslint/parser": "^7.6.0",
		"dotenv": "^16.4.5",
		"drizzle-kit": "^0.21.4",
		"eslint": "^8.0.0",
		"postcss": "^8.4.38",
		"postcss-load-config": "^5.0.3",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.3",
		"prettier-plugin-tailwindcss": "^0.5.13",
		"sass": "^1.77.1",
		"svelte": "4.2.14",
		"svelte-check": "^3.6.9",
		"svelte-dnd-action": "^0.9.43",
		"svelte-motion": "^0.12.2",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.6.2",
		"tsx": "^4.7.2",
		"typescript": "^5.4.5",
		"vite": "^5.2.8",
		"vite-tsconfig-paths": "^4.3.2"
	},
	"type": "module",
	"dependencies": {
		"@repo/constants": "workspace:*",
		"@libsql/client": "^0.6.0",
		"@lucia-auth/adapter-drizzle": "^1.0.7",
		"@repo/ui": "workspace:*",
		"@rive-app/canvas": "^2.14.1",
		"@sveltejs/adapter-vercel": "^5.2.0",
		"@vercel/analytics": "^1.2.2",
		"@vercel/speed-insights": "^1.0.10",
		"arctic": "^1.5.0",
		"drizzle-orm": "^0.30.10",
		"lucia": "^3.1.1",
		"mode-watcher": "^0.3.0",
		"oslo": "^1.2.0",
		"svelte-persisted-store": "^0.9.1",
		"sveltekit-superforms": "^2.12.4",
		"url-metadata": "^4.1.0",
		"zod": "^3.22.4"
	}
}
