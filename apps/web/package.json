{
	"name": "web",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"turso": "turso dev --db-file turso/dev.db",
		"studio": "drizzle-kit studio --config drizzle.config.ts",
		"generate": "drizzle-kit generate --config drizzle.config.ts",
		"migrate": "tsx src/lib/server/db/migrate.ts",
		"push": "drizzle-kit push --config=drizzle.config.ts",
		"introspect": "drizzle-kit introspect --config=drizzle.config.ts"
	},
	"devDependencies": {
		"@lukulent/svelte-umami": "^0.0.3",
		"@repo/eslint-config": "workspace:*",
		"@sveltejs/adapter-node": "^5.2.11",
		"@sveltejs/kit": "^2.15.1",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"@types/eslint": "8.56.9",
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"@typescript-eslint/parser": "^7.18.0",
		"dotenv": "^16.4.7",
		"drizzle-kit": "^0.21.4",
		"eslint": "^8.57.1",
		"postcss": "^8.4.49",
		"postcss-load-config": "^5.1.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"prettier-plugin-tailwindcss": "^0.5.14",
		"sass": "^1.83.0",
		"svelte": "4.2.14",
		"svelte-check": "^3.8.6",
		"svelte-dnd-action": "^0.9.54",
		"svelte-motion": "^0.12.2",
		"tailwindcss": "^3.4.17",
		"tslib": "^2.8.1",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2",
		"vite": "^5.4.11",
		"vite-tsconfig-paths": "^4.3.2"
	},
	"type": "module",
	"dependencies": {
		"@libsql/client": "^0.6.2",
		"@lucia-auth/adapter-drizzle": "^1.1.0",
		"@repo/constants": "workspace:*",
		"@repo/ui": "workspace:*",
		"@rive-app/canvas": "^2.25.3",
		"arctic": "^1.9.2",
		"drizzle-orm": "^0.30.10",
		"lucia": "^3.2.2",
		"mode-watcher": "^0.3.1",
		"oslo": "^1.2.1",
		"svelte-persisted-store": "^0.9.4",
		"sveltekit-superforms": "^2.22.1",
		"url-metadata": "^4.1.1",
		"zod": "^3.24.1"
	}
}
