{
	"name": "web",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"turso": "turso dev --db-file turso/dev.db",
		"studio": "drizzle-kit studio --config drizzle.config.ts",
		"generate": "drizzle-kit generate:sqlite --config drizzle.config.ts",
		"migrate": "tsx src/lib/server/db/migrate.ts",
		"push": "drizzle-kit push:sqlite --config drizzle.config.ts"
	},
	"devDependencies": {
		"@repo/eslint-config": "workspace:*",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "8.56.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"dotenv": "^16.4.1",
		"drizzle-kit": "^0.20.13",
		"eslint": "^8.56.0",
		"postcss": "^8.4.32",
		"postcss-load-config": "^5.0.2",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.5.9",
		"svelte": "4.2.10",
		"svelte-check": "^3.6.0",
		"svelte-dnd-action": "^0.9.42",
		"tailwindcss": "^3.3.6",
		"tslib": "^2.4.1",
		"tsx": "^4.7.0",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"vite-tsconfig-paths": "^4.3.1"
	},
	"type": "module",
	"dependencies": {
		"@libsql/client": "^0.5.0",
		"@lucia-auth/adapter-drizzle": "^1.0.0",
		"@repo/ui": "workspace:*",
		"@rive-app/canvas": "^2.10.2",
		"@sveltejs/adapter-vercel": "^5.1.0",
		"arctic": "^1.1.5",
		"drizzle-orm": "^0.29.3",
		"lucia": "^3.0.1",
		"mode-watcher": "^0.2.0",
		"oslo": "^1.0.2",
		"svelte-persisted-store": "^0.9.1",
		"sveltekit-superforms": "^1.13.4",
		"url-metadata": "^3.4.7",
		"zod": "^3.22.4"
	}
}
